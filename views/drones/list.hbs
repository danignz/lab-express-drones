<h2>Available drones</h2>
{{#each drones}}
  <div id="drone-card">
    <p><strong>Name:</strong> {{this.name}}</p>
    <p><strong>Propellers:</strong> {{this.propellers}}</p>
    <p><strong>Max Speed:</strong> {{this.maxSpeed}}</p>
    
    <div class="action-btns">
    <a class="action-btn" href="/drones/{{this._id}}/edit">Edit</a>
    <form method="POST" action="/drones/{{this._id}}/delete">
      <button type="submit">Delete</button>
    </form>
        </div>
  </div>
{{/each}}